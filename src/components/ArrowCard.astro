---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  entry: CollectionEntry<"projects">;
};

const { entry } = Astro.props;
---

<div class="animate card flex flex-col sm:flex-row gap-8">
  <div 
    class="flex aspect-[16/9] sm:w-4/6 overflow-hidden rounded-lg">
    <Image src={entry.data.cover} alt={entry.data.title} />
  </div>
  <div class="flex flex-col gap-y-4 sm:justify-between sm:w-2/6 pb-2">
    <div class="flex flex-col gap-4">
    <h4>{entry.data.title}</h4>
    <p>{entry.data.description}</p></div>
    <a href={`/${entry.collection}/${entry.slug}`} class="px-4 sm:px-6 py-3 rounded-full w-fit text-white bg-black hover:bg-neutral-700 hover:ease-in-out">Read case study</a>
  </div>
</div>