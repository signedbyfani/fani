---
import Head from "@components/Head.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${SITE.NAME} - ${title}`} description={description} />
  </head>
  <body
  class="absolute inset-0 h-full w-full bg-white"
  >
    <main>
      <slot />
    </main>
  </body>
</html>
